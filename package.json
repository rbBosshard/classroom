{
    "name": "classroom-platform",
    "version": "1.0.0",
    "type": "module",
    "description": "Interactive classroom learning platform with Vue.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:vercel": "vite build --config vite.config.vercel.ts",
        "preview": "vite preview",
        "preview:vercel": "vite preview --config vite.config.vercel.ts",
        "serve": "python3 -m http.server 8080 --directory dist",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "type-check": "vue-tsc --noEmit",
        "lint": "eslint src --ext .vue,.ts,.tsx",
        "lint:fix": "eslint src --ext .vue,.ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.{vue,ts,tsx,js,json,css,md}\"",
        "format:check": "prettier --check \"src/**/*.{vue,ts,tsx,js,json,css,md}\""
    },
    "dependencies": {
        "@vueuse/core": "^10.5.0",
        "crypto-js": "^4.2.0",
        "vue": "^3.5.22"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/crypto-js": "^4.2.1",
        "@types/node": "^24.9.2",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "@typescript-eslint/parser": "^8.46.3",
        "@vitejs/plugin-vue": "^4.6.2",
        "@vitest/ui": "^4.0.8",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.8.1",
        "autoprefixer": "^10.4.16",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-vue": "^10.5.1",
        "happy-dom": "^20.0.10",
        "patch-package": "^8.0.1",
        "postcss": "^8.4.31",
        "prettier": "^3.6.2",
        "tailwindcss": "^3.3.5",
        "terser": "^5.44.0",
        "typescript": "^5.9.3",
        "vite": "^4.5.0",
        "vitest": "^4.0.8",
        "vue-tsc": "^1.8.27"
    }
}
